{
  "name": "servant-ts",
  "version": "1.0.0",
  "description": "Haskell's Servant inspired library for defining API endpoints",
  "repository": "https://github.com/ivivona/servant-ts",
  "scripts": {
    "build": "npm run clean && npm run lint && npm run compile",
    "clean": "rimraf -rf ./{lib}",
    "compile": "NODE_ENV=production tsc -p .",
    "lint": "eslint '{src,tests}/**/*.{ts,tsx}' --fix ",
    "pretty": "prettier --write --list-different '{src,tests}/**/*.ts'",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Ignacio Vivona",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "fp-ts": "^2.4.3",
    "http-status-codes": "^1.4.0",
    "io-ts": "^2.0.6",
    "io-ts-types": "^0.5.6",
    "runtypes": "^4.2.0",
    "type-ts": "^1.1.0"
  },
  "peerDependencies": {
    "express": "^4.x",
    "fp-ts": "^2.x",
    "io-ts": "^2.x"
  },
  "devDependencies": {
    "@types/express": "^4.x",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.3"
  }
}
